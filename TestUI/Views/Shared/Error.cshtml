@model System.Web.Mvc.HandleErrorInfo

@{
    //Elmah.ErrorSignal.FromCurrentContext().Raise(Model.Exception);
    
    ViewBag.Title = "Error";
}

<div class="error ">
    <div class="row">
        <div class="small-12 large-10 columns">
            <h1 class="text-danger">Error.</h1>
            <h2 class="text-danger">An error occured.</h2>
            @if (Model != null && Model.Exception != null)
            {
                <h2 class="text-danger">@Model.Exception.Message.</h2>
                if (Model.Exception.InnerException != null)
                {
                    <h3 class="text-danger">@Model.Exception.InnerException.Message.</h3>
                }
            }

        </div>
    </div>
</div>

    